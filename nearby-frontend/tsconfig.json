{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "strict": true,
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",        // Inclui todos os arquivos na pasta src
    "Tests-RTL/**/*",      // Inclui todos os arquivos dentro da pasta tests
    "node_modules/@types"  // Inclui os tipos personalizados do node_modules
  ],
  "exclude": ["node_modules", "dist"]
}
